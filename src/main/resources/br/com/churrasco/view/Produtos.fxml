<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.churrasco.controller.ProdutosController"
            prefHeight="600.0" prefWidth="900.0">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="VOLTAR AO MENU" onAction="#voltarMenu" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
            <Label text="  GERENCIAMENTO DE PRODUTOS" textFill="WHITE">
                <font><Font name="System Bold" size="20.0"/></font>
            </Label>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #ecf0f1;" prefWidth="300">
            <Label text="Dados do Produto" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

            <Label text="Código (Ex: 10)"/>
            <TextField fx:id="txtCodigo" promptText="Cód. Único"/>

            <Label text="Nome do Produto"/>
            <TextField fx:id="txtNome" promptText="Ex: Picanha"/>

            <HBox spacing="10">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Preço Venda (R$)"/>
                    <TextField fx:id="txtPreco"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Unidade"/>
                    <ComboBox fx:id="comboUnidade" maxWidth="Infinity"/>
                </VBox>
            </HBox>

            <Label text="Estoque Inicial"/>
            <TextField fx:id="txtEstoque" text="0"/>

            <Region VBox.vgrow="ALWAYS"/> <HBox spacing="10">
            <Button text="LIMPAR" onAction="#limparCampos" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button text="SALVAR" onAction="#salvarProduto" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>

            <Button text="EXCLUIR SELECIONADO" onAction="#excluirProduto" maxWidth="Infinity"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <center>
        <TableView fx:id="tabelaProdutos" style="-fx-padding: 10;">
            <columns>
                <TableColumn fx:id="colCodigo" text="Cód" prefWidth="60"/>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="250"/>
                <TableColumn fx:id="colPreco" text="Preço" prefWidth="100"/>
                <TableColumn fx:id="colUnidade" text="Un." prefWidth="50"/>
                <TableColumn fx:id="colEstoque" text="Estoque" prefWidth="80"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>