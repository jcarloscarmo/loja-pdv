<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.churrasco.controller.RelatoriosController"
            prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f4f6f7;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="VOLTAR AO MENU" onAction="#voltarMenu"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; cursor: hand;"/>

            <Label text="FECHAMENTO DE CAIXA" textFill="WHITE">
                <font><Font name="System Bold" size="24.0"/></font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Data:" textFill="WHITE" style="-fx-font-size: 16px;"/>
            <DatePicker fx:id="dtPicker" prefWidth="150"/>
            <Button text="FILTRAR" onAction="#carregarDados" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <HBox spacing="15" alignment="CENTER">
                <VBox style="-fx-background-color: #2c3e50; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" prefWidth="180">
                    <Label text="TOTAL GERAL" textFill="WHITE"><font><Font size="12"/></font></Label>
                    <Label fx:id="lblTotalGeral" text="R$ 0,00" textFill="#2ecc71"><font><Font name="System Bold" size="22"/></font></Label>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" prefWidth="180">
                    <Label text="DINHEIRO" textFill="#7f8c8d"><font><Font size="12"/></font></Label>
                    <Label fx:id="lblTotalDinheiro" text="R$ 0,00" textFill="#27ae60"><font><Font name="System Bold" size="20"/></font></Label>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" prefWidth="180">
                    <Label text="PIX" textFill="#7f8c8d"><font><Font size="12"/></font></Label>
                    <Label fx:id="lblTotalPix" text="R$ 0,00" textFill="#8e44ad"><font><Font name="System Bold" size="20"/></font></Label>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" prefWidth="180">
                    <Label text="DÉBITO" textFill="#7f8c8d"><font><Font size="12"/></font></Label>
                    <Label fx:id="lblTotalDebito" text="R$ 0,00" textFill="#2980b9"><font><Font name="System Bold" size="20"/></font></Label>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" prefWidth="180">
                    <Label text="CRÉDITO" textFill="#7f8c8d"><font><Font size="12"/></font></Label>
                    <Label fx:id="lblTotalCredito" text="R$ 0,00" textFill="#e67e22"><font><Font name="System Bold" size="20"/></font></Label>
                </VBox>
            </HBox>

            <Separator/>

            <Label text="Detalhamento das Vendas">
                <font><Font name="System Bold" size="18"/></font>
            </Label>

            <Label text="Detalhamento (Clique na linha para ver o Recibo)">
                <font><Font name="System Bold" size="18"/></font>
            </Label>

            <TableView fx:id="tabelaVendas" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="Nº" prefWidth="60" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colHora" text="Horário" prefWidth="100" style="-fx-alignment: CENTER;"/>

                    <TableColumn fx:id="colDinheiro" text="Dinheiro" prefWidth="120" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #27ae60;"/>
                    <TableColumn fx:id="colDebito" text="Débito" prefWidth="120" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #2980b9;"/>
                    <TableColumn fx:id="colCredito" text="Crédito" prefWidth="120" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #e67e22;"/>
                    <TableColumn fx:id="colPix" text="Pix" prefWidth="120" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #8e44ad;"/>

                    <TableColumn fx:id="colValor" text="TOTAL" prefWidth="150" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <placeholder><Label text="Nenhuma venda encontrada."/></placeholder>
            </TableView>

        </VBox>
    </center>
</BorderPane>