<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.churrasco.controller.RelatoriosController"
            prefHeight="700.0" prefWidth="1100.0" style="-fx-background-color: #f4f6f7;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="VOLTAR AO MENU" onAction="#voltarMenu" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; cursor: hand;"/>
            <Label text="FECHAMENTO FINANCEIRO" textFill="WHITE">
                <font><Font name="System Bold" size="24.0"/></font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Data:" textFill="WHITE" style="-fx-font-size: 16px;"/>
            <DatePicker fx:id="dtPicker" prefWidth="150"/>
            <Button text="FILTRAR" onAction="#carregarDados" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <HBox spacing="10" alignment="CENTER">
                <VBox style="-fx-background-color: #2c3e50; -fx-padding: 10; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" prefWidth="160">
                    <Label text="FATURAMENTO" textFill="WHITE"><font><Font size="11"/></font></Label>
                    <Label fx:id="lblTotalGeral" text="R$ 0,00" textFill="#2ecc71"><font><Font name="System Bold" size="18"/></font></Label>
                </VBox>

                <VBox style="-fx-background-color: #c0392b; -fx-padding: 10; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" prefWidth="160">
                    <Label text="CUSTO TOTAL" textFill="WHITE"><font><Font size="11"/></font></Label>
                    <Label fx:id="lblTotalCusto" text="R$ 0,00" textFill="WHITE"><font><Font name="System Bold" size="18"/></font></Label>
                </VBox>

                <VBox style="-fx-background-color: #27ae60; -fx-padding: 10; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" prefWidth="160">
                    <Label text="LUCRO LÍQUIDO" textFill="WHITE"><font><Font size="11"/></font></Label>
                    <Label fx:id="lblTotalLucro" text="R$ 0,00" textFill="WHITE"><font><Font name="System Bold" size="18"/></font></Label>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;" prefWidth="120">
                    <Label text="DINHEIRO" textFill="#7f8c8d"><font><Font size="10"/></font></Label>
                    <Label fx:id="lblTotalDinheiro" text="R$ 0,00" textFill="#27ae60"><font><Font name="System Bold" size="14"/></font></Label>
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;" prefWidth="120">
                    <Label text="PIX" textFill="#7f8c8d"><font><Font size="10"/></font></Label>
                    <Label fx:id="lblTotalPix" text="R$ 0,00" textFill="#8e44ad"><font><Font name="System Bold" size="14"/></font></Label>
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;" prefWidth="120">
                    <Label text="CRÉD/DÉB" textFill="#7f8c8d"><font><Font size="10"/></font></Label>
                    <Label fx:id="lblTotalCartao" text="R$ 0,00" textFill="#2980b9"><font><Font name="System Bold" size="14"/></font></Label>
                </VBox>
            </HBox>

            <Separator/>

            <TableView fx:id="tabelaVendas" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="Nº" prefWidth="50" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colHora" text="Horário" prefWidth="80" style="-fx-alignment: CENTER;"/>

                    <TableColumn fx:id="colValor" text="Venda" prefWidth="100" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;"/>
                    <TableColumn fx:id="colCusto" text="Custo" prefWidth="100" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #c0392b;"/>
                    <TableColumn fx:id="colLucro" text="Lucro" prefWidth="100" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>

                    <TableColumn fx:id="colDinheiro" text="Dinheiro" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="colPix" text="Pix" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="colDebito" text="Débito" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="colCredito" text="Crédito" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>