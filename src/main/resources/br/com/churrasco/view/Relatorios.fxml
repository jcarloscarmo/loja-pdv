<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.churrasco.controller.RelatoriosController"
            prefHeight="700.0" prefWidth="1100.0" style="-fx-background-color: #ecf0f1;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="VOLTAR AO MENU" onAction="#voltarMenu"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

            <Label text="RELATÓRIO DE VENDAS DIÁRIO" textFill="WHITE" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <font><Font name="System Bold" size="24.0"/></font>
            </Label>

            <Label text="Data:" textFill="white"/>
            <DatePicker fx:id="dtPicker" prefWidth="150"/>
            <Button text="FILTRAR" onAction="#carregarDados"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 15;">

            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox style="-fx-background-color: #2c3e50; -fx-padding: 10; -fx-background-radius: 5; -fx-min-width: 150;">
                    <Label text="FATURAMENTO (LIQ)" textFill="white" style="-fx-font-size: 12px;"/>
                    <Label fx:id="lblTotalGeral" text="R$ 0,00" textFill="#2ecc71">
                        <font><Font name="System Bold" size="22.0"/></font>
                    </Label>
                </VBox>

                <VBox style="-fx-background-color: #c0392b; -fx-padding: 10; -fx-background-radius: 5; -fx-min-width: 140;">
                    <Label text="CUSTO TOTAL" textFill="white" style="-fx-font-size: 12px;"/>
                    <Label fx:id="lblTotalCusto" text="R$ 0,00" textFill="white">
                        <font><Font name="System Bold" size="22.0"/></font>
                    </Label>
                </VBox>

                <VBox style="-fx-background-color: #8e44ad; -fx-padding: 10; -fx-background-radius: 5; -fx-min-width: 140;">
                    <Label text="TOTAL DESCONTOS" textFill="white" style="-fx-font-size: 12px;"/>
                    <Label fx:id="lblTotalDescontos" text="R$ 0,00" textFill="white">
                        <font><Font name="System Bold" size="22.0"/></font>
                    </Label>
                </VBox>

                <VBox style="-fx-background-color: #27ae60; -fx-padding: 10; -fx-background-radius: 5; -fx-min-width: 150;">
                    <Label text="LUCRO LÍQUIDO" textFill="white" style="-fx-font-size: 12px;"/>
                    <Label fx:id="lblTotalLucro" text="R$ 0,00" textFill="white">
                        <font><Font name="System Bold" size="22.0"/></font>
                    </Label>
                </VBox>

                <HBox spacing="10" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
                    <VBox>
                        <Label text="DINHEIRO" textFill="#7f8c8d" style="-fx-font-size: 10px;"/>
                        <Label fx:id="lblTotalDinheiro" text="R$ 0,00" textFill="#27ae60" style="-fx-font-weight: bold;"/>
                    </VBox>
                    <Separator orientation="VERTICAL"/>
                    <VBox>
                        <Label text="PIX" textFill="#7f8c8d" style="-fx-font-size: 10px;"/>
                        <Label fx:id="lblTotalPix" text="R$ 0,00" textFill="#8e44ad" style="-fx-font-weight: bold;"/>
                    </VBox>
                    <Separator orientation="VERTICAL"/>
                    <VBox>
                        <Label text="CRÉD/DÉB" textFill="#7f8c8d" style="-fx-font-size: 10px;"/>
                        <Label fx:id="lblTotalCartao" text="R$ 0,00" textFill="#2980b9" style="-fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
            </HBox>

            <TableView fx:id="tabelaVendas" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
                <columns>
                    <TableColumn fx:id="colId" text="Nº" prefWidth="50" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colHora" text="Horário" prefWidth="80" style="-fx-alignment: CENTER;"/>

                    <TableColumn fx:id="colValor" text="Venda (Liq)" prefWidth="100" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;"/>
                    <TableColumn fx:id="colDesconto" text="Desconto" prefWidth="90" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #c0392b;"/>

                    <TableColumn fx:id="colCusto" text="Custo" prefWidth="90" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #c0392b;"/>
                    <TableColumn fx:id="colLucro" text="Lucro" prefWidth="100" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>

                    <TableColumn fx:id="colDinheiro" text="Dinheiro" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="colPix" text="Pix" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="colDebito" text="Débito" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
                    <TableColumn fx:id="colCredito" text="Crédito" prefWidth="90" style="-fx-alignment: CENTER-RIGHT;"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>

            <Label text="* Clique duas vezes na venda para ver o cupom detalhado." textFill="#7f8c8d" style="-fx-font-style: italic;"/>
        </VBox>
    </center>

</BorderPane>