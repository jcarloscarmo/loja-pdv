<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.churrasco.controller.PagamentoController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f4f6f7;"
      prefWidth="600" prefHeight="750">

    <VBox spacing="5" alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <HBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER">
                <Label text="SUBTOTAL" textFill="#7f8c8d"><font><Font size="12"/></font></Label>
                <Label fx:id="lblSubTotal" text="R$ 0,00" textFill="#7f8c8d"><font><Font name="System Bold" size="20"/></font></Label>
            </VBox>
            <VBox alignment="CENTER">
                <Label text="DESCONTO" textFill="#c0392b"><font><Font size="12"/></font></Label>
                <Label fx:id="lblValorDesconto" text="R$ 0,00" textFill="#c0392b"><font><Font name="System Bold" size="20"/></font></Label>
            </VBox>
        </HBox>
        <Separator/>
        <Label text="TOTAL A PAGAR" textFill="#2c3e50"><font><Font size="14"/></font></Label>
        <Label fx:id="lblTotalFinal" text="R$ 0,00" textFill="#2c3e50"><font><Font name="System Bold" size="36"/></font></Label>
        <Label text="FALTA PAGAR" textFill="#e74c3c"><font><Font size="12"/></font></Label>
        <Label fx:id="lblFalta" text="R$ 0,00" textFill="#c0392b"><font><Font name="System Bold" size="24"/></font></Label>
    </VBox>

    <VBox spacing="10">
        <Label text="Escolha a forma de pagamento ou aplique desconto:" style="-fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="33"/>
                <ColumnConstraints percentWidth="33"/>
                <ColumnConstraints percentWidth="33"/>
            </columnConstraints>

            <Button fx:id="btnDinheiro" text="DINHEIRO (1)" onAction="#selecionarDinheiro" maxWidth="Infinity" prefHeight="50"
                    style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

            <Button fx:id="btnDebito" text="DÉBITO (2)" onAction="#selecionarDebito" maxWidth="Infinity" prefHeight="50"
                    style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Button fx:id="btnCredito" text="CRÉDITO (3)" onAction="#selecionarCredito" maxWidth="Infinity" prefHeight="50"
                    style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

            <Button fx:id="btnPix" text="PIX (4)" onAction="#selecionarPix" maxWidth="Infinity" prefHeight="50"
                    style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

            <Button fx:id="btnDesconto" text="DESCONTO (-)" onAction="#selecionarDesconto" maxWidth="Infinity" prefHeight="50"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
        </GridPane>
    </VBox>

    <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5; -fx-padding: 10;">
        <Label fx:id="lblMetodoSelecionado" text="Aguardando..." textFill="#8e44ad" style="-fx-font-weight: bold;"/>

        <HBox spacing="10">
            <TextField fx:id="txtValor" HBox.hgrow="ALWAYS" alignment="CENTER" promptText="R$ 0,00" disable="true"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Button fx:id="btnAddPagamento" text="LANÇAR (Enter)" onAction="#confirmarInputAtual" disable="true"
                    prefHeight="50" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <TableView fx:id="tabelaPagamentos" VBox.vgrow="ALWAYS" style="-fx-base: white;">
        <columns>
            <TableColumn fx:id="colTipoPagamento" text="Forma" prefWidth="250"/>
            <TableColumn fx:id="colValorPagamento" text="Valor (R$)" prefWidth="150"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>

    <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #dff9fb; -fx-background-radius: 5;">
        <HBox alignment="CENTER" spacing="15">
            <Label text="TROCO:" textFill="#16a085"><font><Font name="System Bold" size="20"/></font></Label>
            <Label fx:id="lblTroco" text="R$ 0,00" textFill="#16a085"><font><Font name="System Bold" size="20"/></font></Label>
        </HBox>

        <Button fx:id="btnConcluir" text="CONCLUIR VENDA" onAction="#confirmarEFechar" disable="true"
                maxWidth="Infinity" prefHeight="50"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
    </VBox>

</VBox>