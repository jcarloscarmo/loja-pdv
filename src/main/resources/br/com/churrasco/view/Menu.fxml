<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.churrasco.controller.MenuController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="TIÃOZINHO'S GRILL | SISTEMA DE GESTÃO" textFill="WHITE">
                <font>
                    <Font name="Segoe UI Bold" size="24.0" />
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS" /> <Label fx:id="lblUsuarioLogado" text="Usuário: ..." textFill="#bdc3c7">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Label>

            <Separator orientation="VERTICAL" />

            <Button onAction="#fazerLogout" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="SAIR (LOGOUT)" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-background-color: #ecf0f1; -fx-padding: 40;">

            <Label text="Painel de Controle" textFill="#7f8c8d">
                <font>
                    <Font size="22.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>

            <GridPane alignment="CENTER" hgap="20.0" vgap="20.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="220.0" prefWidth="250.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="220.0" prefWidth="250.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="220.0" prefWidth="250.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="120.0" prefHeight="120.0" vgrow="ALWAYS" />
                    <RowConstraints minHeight="120.0" prefHeight="120.0" vgrow="ALWAYS" />
                    <RowConstraints minHeight="80.0" prefHeight="80.0" vgrow="ALWAYS" />
                </rowConstraints>

                <Button onAction="#abrirPDV" maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="INICIAR VENDAS (PDV)" GridPane.columnIndex="0" GridPane.columnSpan="2">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Button>

                <Button onAction="#abrirProdutos" maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" text="PRODUTOS &amp; ESTOQUE" GridPane.columnIndex="2">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <Button onAction="#abrirFinanceiro" maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" text="FLUXO DE CAIXA &amp; DRE" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Button>

                <Button onAction="#abrirRankingProdutos" maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" text="RANKING DE VENDAS" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <Button onAction="#abrirRelatorios" maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" text="RELATÓRIOS / FECHAMENTO" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="btnAuditoria" onAction="#abrirHistoricoCaixas" maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="AUDITORIA DE CAIXAS" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Button>

                <Button fx:id="btnConfig" onAction="#abrirConfiguracoes" maxWidth="Infinity" maxHeight="Infinity" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="CONFIGURAÇÕES" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Button>

            </GridPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #bdc3c7;">
            <Label text="Sistema desenvolvido para Alta Performance - Versão 2.1" textFill="#2c3e50">
                <font>
                    <Font size="10.0" />
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>