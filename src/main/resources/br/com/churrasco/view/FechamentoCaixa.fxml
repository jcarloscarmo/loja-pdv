    <Label text="FECHAMENTO DO DIA" textFill="#2c3e50">
        <font><Font name="System Bold" size="24"/></font>
    </Label>
    <Separator/>

    <Label text="O sistema calculou que deve haver:" textFill="#7f8c8d"/>
    <Label fx:id="lblSaldoSistema" text="R$ 0,00" textFill="#2980b9">
        <font><Font name="System Bold" size="36"/></font>
    </Label>
    <Label text="(Troco Inicial + Vendas em Dinheiro)" textFill="#95a5a6" style="-fx-font-size: 10px;"/>

    <Separator/>

    <Label text="Quanto tem na gaveta? (Contagem)" style="-fx-font-weight: bold;"/>
    <TextField fx:id="txtValor" promptText="Digite o valor contado..." alignment="CENTER" style="-fx-font-size: 20px;"/>

    <Label fx:id="lblDiferenca" text="DiferenÃ§a: R$ 0,00" textFill="#7f8c8d">
        <font><Font name="System Bold" size="14"/></font>
    </Label>

    <Region VBox.vgrow="ALWAYS"/>

    <Button text="FECHAR CAIXA E SAIR" onAction="#confirmarFechamento" defaultButton="true"
            maxWidth="Infinity" prefHeight="50" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>
