<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.churrasco.controller.FluxoCaixaController"
            prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #ecf0f1;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="VOLTAR" onAction="#voltarMenu" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Label text="FLUXO DE CAIXA &amp; DRE GERENCIAL" textFill="WHITE">
                <font><Font name="System Bold" size="22.0"/></font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Mês de Referência:" textFill="WHITE"/>
            <DatePicker fx:id="dtMes" prefWidth="150" promptText="Selecione o Mês"/>

            <Button text="ATUALIZAR" onAction="#carregarDados" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;"/>

            <Separator orientation="VERTICAL"/>

            <Button text="+ LANÇAR DESPESA / PERDA" onAction="#lancarDespesa"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 5, 0, 0, 1);"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">

            <HBox spacing="15" alignment="CENTER">
                <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                    <Label text="TOTAL RECEITAS" textFill="#7f8c8d"><font><Font size="14"/></font></Label>
                    <Label fx:id="lblReceitas" text="R$ 0,00" textFill="#27ae60"><font><Font name="System Bold" size="24"/></font></Label>
                </VBox>

                <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                    <Label text="CUSTOS + DESPESAS" textFill="#7f8c8d"><font><Font size="14"/></font></Label>
                    <Label fx:id="lblDespesas" text="R$ 0,00" textFill="#c0392b"><font><Font name="System Bold" size="24"/></font></Label>
                </VBox>

                <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: #dff9fb; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #3498db; -fx-border-width: 0 0 0 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                    <Label text="LUCRO LÍQUIDO (RESULTADO)" textFill="#2c3e50"><font><Font name="System Bold" size="14"/></font></Label>
                    <Label fx:id="lblSaldo" text="R$ 0,00"><font><Font name="System Bold" size="28"/></font></Label>
                </VBox>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #ffffff; -fx-padding: 5; -fx-background-radius: 5;">
                <Label text="Visualizar no Gráfico de Linha:" style="-fx-font-weight: bold;"/>
                <CheckBox fx:id="chkVerAcumulado" text="Saldo Acumulado" selected="true" style="-fx-text-fill: blue;"/>
                <CheckBox fx:id="chkVerReceita" text="Receitas" style="-fx-text-fill: green;"/>
                <CheckBox fx:id="chkVerDespesa" text="Despesas" style="-fx-text-fill: red;"/>
                <CheckBox fx:id="chkVerSaldoDia" text="Lucro Diário" style="-fx-text-fill: #e67e22;"/>
            </HBox>

            <HBox spacing="10" prefHeight="300" VBox.vgrow="ALWAYS">
                <LineChart fx:id="graficoLinha" title="Evolução Financeira" style="-fx-background-color: white; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                    <xAxis><CategoryAxis label="Dia do Mês"/></xAxis>
                    <yAxis><NumberAxis label="Valor (R$)"/></yAxis>
                </LineChart>

                <BarChart fx:id="graficoBarras" title="Resumo Operacional (DRE)" style="-fx-background-color: white; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                    <xAxis><CategoryAxis label="Categoria"/></xAxis>
                    <yAxis><NumberAxis label="Valor (R$)"/></yAxis>
                </BarChart>
            </HBox>

            <Label text="Detalhamento Diário" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #34495e;"/>
            <TableView fx:id="tabelaFluxo" VBox.vgrow="ALWAYS" style="-fx-font-size: 13px;">
                <columns>
                    <TableColumn fx:id="colDia" text="Dia" prefWidth="120" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colEntrada" text="Receitas (+)" prefWidth="150" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #27ae60;"/>
                    <TableColumn fx:id="colSaida" text="Despesas (-)" prefWidth="150" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #c0392b;"/>
                    <TableColumn fx:id="colSaldoDia" text="Saldo do Dia" prefWidth="150" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;"/>
                    <TableColumn fx:id="colAcumulado" text="Acumulado Mês" prefWidth="150" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>

        </VBox>
    </center>

</BorderPane>