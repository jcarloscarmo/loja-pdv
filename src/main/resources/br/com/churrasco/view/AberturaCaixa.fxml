<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.churrasco.controller.CaixaController"
      alignment="CENTER" spacing="20" style="-fx-padding: 30; -fx-background-color: #2c3e50;" prefWidth="400" prefHeight="300">

    <Label text="ABERTURA DE CAIXA" textFill="WHITE">
        <font><Font name="System Bold" size="24"/></font>
    </Label>

    <Separator/>

    <Label text="Informe o Fundo de Troco (R$):" textFill="WHITE"/>
    <TextField fx:id="txtValor" promptText="R$ 0,00" alignment="CENTER" style="-fx-font-size: 20px;"/>

    <Button text="ABRIR CAIXA" onAction="#confirmarAbertura" defaultButton="true"
            maxWidth="Infinity" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
</VBox>