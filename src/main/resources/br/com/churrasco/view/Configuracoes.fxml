<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.churrasco.controller.ConfiguracoesController"
            prefHeight="650.0" prefWidth="950.0">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="VOLTAR" onAction="#voltarMenu" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            <Label text="CONFIGURAÇÕES DO SISTEMA" textFill="WHITE">
                <font><Font name="System Bold" size="20.0"/></font>
            </Label>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 10;">

            <Tab text="Dados da Empresa (Cupom)">
                <SplitPane dividerPositions="0.6">
                    <ScrollPane fitToWidth="true">
                        <VBox spacing="15" style="-fx-padding: 20;">
                            <Label text="Personalize o cabeçalho do seu comprovante:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="70"/>
                                    <ColumnConstraints percentWidth="30"/>
                                </columnConstraints>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <Label text="Nome Fantasia / Razão Social:" style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="txtEmpresaNome"/>
                                </VBox>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <Label text="CNPJ:" style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="txtCnpj"/>
                                </VBox>
                                <CheckBox fx:id="chkPrintCnpj" text="Imprimir?" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
                                    <Label text="Endereço Completo:" style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="txtEndereco"/>
                                </VBox>
                                <CheckBox fx:id="chkPrintEndereco" text="Imprimir?" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="3">
                                    <Label text="Telefone / WhatsApp:" style="-fx-font-weight: bold;"/>
                                    <TextField fx:id="txtTelefone"/>
                                </VBox>
                                <CheckBox fx:id="chkPrintTelefone" text="Imprimir?" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                            </GridPane>
                            <Separator/>
                            <Label text="Rodapé e Mensagens:" style="-fx-font-weight: bold;"/>
                            <TextField fx:id="txtRodape" promptText="Ex: Volte Sempre!"/>
                            <CheckBox fx:id="chkPrintDataHora" text="Imprimir Data e Hora no Cabeçalho?" selected="true"/>
                        </VBox>
                    </ScrollPane>
                    <VBox style="-fx-background-color: #ecf0f1; -fx-padding: 15;" alignment="TOP_CENTER" spacing="10">
                        <Label text="PRÉ-VISUALIZAÇÃO (58mm)" textFill="#7f8c8d" style="-fx-font-weight: bold;"/>
                        <VBox style="-fx-background-color: #fff9c4; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 2); -fx-padding: 5;" maxWidth="300" VBox.vgrow="ALWAYS">
                            <TextArea fx:id="txtPreview" editable="false" wrapText="false" VBox.vgrow="ALWAYS" style="-fx-control-inner-background: #fff9c4; -fx-background-color: #fff9c4; -fx-font-family: 'Courier New'; -fx-font-size: 14px; -fx-highlight-fill: #fff9c4; -fx-highlight-text-fill: black; -fx-text-fill: black;"/>
                        </VBox>
                    </VBox>
                </SplitPane>
            </Tab>

            <Tab text="Hardware (Impressora e Balança)">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <TitledPane text="Impressora Térmica (Cupom)" collapsible="false">
                        <VBox spacing="15" style="-fx-padding: 10;">
                            <Label text="Selecione a Impressora USB instalada no Windows:"/>
                            <ComboBox fx:id="comboImpressoras" maxWidth="Infinity"/>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Button text="TESTAR IMPRESSÃO AGORA" onAction="#testarImpressora" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                                <Label text="* Salve antes de testar." textFill="#e67e22"/>
                            </HBox>
                        </VBox>
                    </TitledPane>

                    <TitledPane text="Balança (Serial/USB)" collapsible="false">
                        <VBox spacing="15" style="-fx-padding: 10;">
                            <HBox spacing="10">
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label text="Porta de Comunicação (COM):"/>
                                    <ComboBox fx:id="comboPortas" maxWidth="Infinity"/>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label text="Velocidade (Baud Rate):"/>
                                    <ComboBox fx:id="comboVelocidade" maxWidth="Infinity"/>
                                </VBox>
                            </HBox>
                            <Label text="* Recomendado: 9600 para leitura rápida." textFill="#7f8c8d" style="-fx-font-size: 11px;"/>
                        </VBox>
                    </TitledPane>
                </VBox>
            </Tab>

            <Tab text="Gestão de Usuários">
                <SplitPane dividerPositions="0.4">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        <Label text="Cadastro de Usuário" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

                        <Label text="Nome:"/>
                        <TextField fx:id="txtUsuarioNome" promptText="Ex: João Garçom"/>

                        <Label text="Senha:"/>
                        <PasswordField fx:id="txtUsuarioSenha"/>

                        <Label text="Perfil de Acesso:"/>
                        <ComboBox fx:id="comboPerfil" maxWidth="Infinity"/>

                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <Button text="Limpar" onAction="#limparFormUsuario" style="-fx-cursor: hand;"/>
                            <Button text="SALVAR USUÁRIO" onAction="#salvarUsuario" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                        </HBox>

                        <Separator/>
                        <Button text="EXCLUIR SELECIONADO" onAction="#excluirUsuario" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" maxWidth="Infinity"/>
                    </VBox>

                    <TableView fx:id="tabelaUsuarios" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colUsuarioNome" text="NOME" prefWidth="150"/>
                            <TableColumn fx:id="colPerfil" text="PERFIL" prefWidth="100"/>
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    </TableView>
                </SplitPane>
            </Tab>

        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
            <Label fx:id="lblStatus" text="" textFill="green" style="-fx-font-weight: bold;"/>
            <Button text="SALVAR CONFIGURAÇÕES GERAIS" onAction="#salvarTudo" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-cursor: hand;"/>
        </HBox>
    </bottom>

</BorderPane>