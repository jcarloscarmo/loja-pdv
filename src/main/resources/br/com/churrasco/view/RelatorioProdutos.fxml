<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.churrasco.controller.RelatorioProdutosController"
            prefHeight="600.0" prefWidth="1000.0">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="VOLTAR" onAction="#voltarMenu" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label text="RANKING DETALHADO (CUSTO X LUCRO)" textFill="WHITE">
                <font><Font name="System Bold" size="20.0"/></font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="De:" textFill="WHITE"/>
            <DatePicker fx:id="dtInicio" prefWidth="120"/>
            <Label text="Até:" textFill="WHITE"/>
            <DatePicker fx:id="dtFim" prefWidth="120"/>
            <Button text="FILTRAR" onAction="#carregarDados" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; cursor: hand;"/>
        </HBox>
    </top>

    <center>
        <VBox style="-fx-padding: 20;" spacing="10">
            <TableView fx:id="tabela" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
                <columns>
                    <TableColumn fx:id="colCodigo" text="Cód" prefWidth="60" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colNome" text="Produto" prefWidth="250"/>
                    <TableColumn fx:id="colUnidade" text="Un." prefWidth="50" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colQtd" text="Qtd." prefWidth="80" style="-fx-alignment: CENTER;"/>

                    <TableColumn fx:id="colTotal" text="Faturamento" prefWidth="110" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;"/>
                    <TableColumn fx:id="colCusto" text="Custo Total" prefWidth="110" style="-fx-alignment: CENTER-RIGHT; -fx-text-fill: #e74c3c;"/>

                    <TableColumn fx:id="colLucro" text="Lucro Real" prefWidth="110" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <placeholder><Label text="Selecione um período e clique em Filtrar"/></placeholder>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                <VBox alignment="CENTER_RIGHT">
                    <Label text="FATURAMENTO">
                        <font><Font size="11"/></font>
                    </Label>
                    <Label fx:id="lblTotalPeriodo" text="R$ 0,00" textFill="#2980b9">
                        <font><Font name="System Bold" size="18"/></font>
                    </Label>
                </VBox>

                <Separator orientation="VERTICAL"/>

                <VBox alignment="CENTER_RIGHT">
                    <Label text="CUSTO TOTAL">
                        <font><Font size="11"/></font>
                    </Label>
                    <Label fx:id="lblCustoPeriodo" text="R$ 0,00" textFill="#c0392b">
                        <font><Font name="System Bold" size="18"/></font>
                    </Label>
                </VBox>

                <Separator orientation="VERTICAL"/>

                <VBox alignment="CENTER_RIGHT">
                    <Label text="LUCRO LÍQUIDO">
                        <font><Font size="11"/></font>
                    </Label>
                    <Label fx:id="lblLucroPeriodo" text="R$ 0,00" textFill="#27ae60">
                        <font><Font name="System Bold" size="22"/></font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>