<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.churrasco.controller.RelatorioProdutosController"
            prefHeight="600.0" prefWidth="900.0">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Button text="VOLTAR" onAction="#voltarMenu" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Label text="RANKING DE VENDAS POR PRODUTO" textFill="WHITE">
                <font><Font name="System Bold" size="20.0"/></font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="De:" textFill="WHITE"/>
            <DatePicker fx:id="dtInicio" prefWidth="120"/>

            <Label text="Até:" textFill="WHITE"/>
            <DatePicker fx:id="dtFim" prefWidth="120"/>

            <Button text="FILTRAR" onAction="#carregarDados"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; cursor: hand;"/>
        </HBox>
    </top>

    <center>
        <VBox style="-fx-padding: 20;" spacing="10">
            <TableView fx:id="tabela" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
                <columns>
                    <TableColumn fx:id="colCodigo" text="Cód" prefWidth="80" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colNome" text="Produto" prefWidth="300"/>
                    <TableColumn fx:id="colUnidade" text="Un." prefWidth="50" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colQtd" text="Qtd. Vendida" prefWidth="120" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colTotal" text="Total Faturado" prefWidth="150" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <placeholder><Label text="Selecione um período e clique em Filtrar"/></placeholder>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                <Label text="TOTAL DO PERÍODO:">
                    <font><Font size="16"/></font>
                </Label>
                <Label fx:id="lblTotalPeriodo" text="R$ 0,00" textFill="#2980b9">
                    <font><Font name="System Bold" size="24"/></font>
                </Label>
            </HBox>
        </VBox>
    </center>

</BorderPane>