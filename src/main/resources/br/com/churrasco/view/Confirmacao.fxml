<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.com.churrasco.controller.ConfirmacaoController"
      fx:id="root"
      alignment="TOP_CENTER" spacing="15"
      style="-fx-background-color: #fff9c4; -fx-padding: 20; -fx-border-color: #f1c40f; -fx-border-width: 5;"
      prefWidth="400" prefHeight="600">

    <Label text="DETALHE DA VENDA" textFill="#f39c12">
        <font><Font name="System Bold" size="20"/></font>
    </Label>

    <TextArea fx:id="txtResumo" VBox.vgrow="ALWAYS" editable="false" wrapText="true" focusTraversable="false"
              style="-fx-control-inner-background: #fff9c4; -fx-background-color: #fff9c4; -fx-font-family: 'Courier New'; -fx-font-size: 14px; -fx-font-weight: bold;"/>

    <Label fx:id="lblPergunta" text="Confirma os dados acima?" textFill="#7f8c8d"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnCancelar" text="NÃƒO / VOLTAR (0)" onAction="#cancelar"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Button fx:id="btnConfirmar" text="SIM, CONFIRMAR (ENTER)" onAction="#confirmar" defaultButton="true"
                prefWidth="200" prefHeight="50"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
    </HBox>

</VBox>